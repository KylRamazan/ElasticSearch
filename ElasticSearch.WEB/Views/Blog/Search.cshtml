@using Microsoft.AspNetCore.Mvc.TagHelpers
@using ElasticSearch.WEB.ViewModels
@model List<BlogResponseViewModel>
@{
    ViewData["Title"] = "Search";
}

<div class="container">
    <div class="col-md-10 offset-md-1">
        <form asp-action="Search">
            <div class="mb-3">
                <label>Search (Title, Content, Tags)</label>
                <input value="@ViewBag.SearchText" name="searchText" class="form-control" />
            </div>

            <button type="submit" class="btn btn-info">Search</button>
        </form>

        @if (!Model.Any())
        {
            <div class="alert-info">Sonuç bulunamamıştır!</div>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Title</td>
                        <td>Content</td>
                        <td>Tags</td>
                        <td>UserId</td>
                        <td>Created</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BlogResponseViewModel blog in Model)
                    {
                        <tr>
                            <td>@blog.Id</td>
                            <td>@blog.Title</td>
                            <td>@blog.Content</td>
                            <td>@blog.Tags</td>
                            <td>@blog.UserId</td>
                            <td>@blog.Created</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>